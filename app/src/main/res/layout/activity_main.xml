<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Select Your favorite Superhero"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/superman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Superman"
            android:textSize="25sp"/>
        <CheckBox
            android:id="@+id/ironman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ironman"
            android:textSize="25sp"/>
        <CheckBox
            android:id="@+id/batman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batman"
            android:textSize="25sp"/>
        <CheckBox
            android:id="@+id/spiderman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spiderman"
            android:textSize="25sp"/>
        <CheckBox
            android:id="@+id/deadpool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadpool"
            android:textSize="25sp"/>

    </LinearLayout>
    <Button
        android:id="@+id/showButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Show"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=""
        android:layout_marginTop="10dp"/>


</LinearLayout>